<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/visitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numero_local2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="-2dp"
            android:gravity="center"
            android:text="VISITANTE"
            android:textSize="30sp"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_centerHorizontal="true"
            android:background="#E4220500"
            android:text="@string/basketabll_score"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="16sp"
            android:gravity="center"
            tools:context=".MainActivity"/>

        <TextView
            android:id="@+id/Local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="-4dp"
            android:gravity="center"
            android:text="@string/local"
            android:textSize="30sp"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/numero_local"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Local"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:rotationX="2"
            android:text="@string/numero_local"
            android:textSize="100sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/numero_local2"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:rotationX="2"
            android:text="@string/numero_local"
            android:textSize="100sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_restar_visitante"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="57dp"
            android:layout_toStartOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="-1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_restar_local4"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_below="@+id/Local"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="-1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_sumar1_local"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_below="@+id/Local"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="43dp"
            android:layout_toEndOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="+1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_sumar1_visitante"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="43dp"
            android:layout_toEndOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="+1"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_sumar2_local"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:layout_below="@+id/boton_sumar1_local"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="43dp"
            android:layout_toEndOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="+2"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/boton_sumar2_visitante"
            android:layout_width="70dp"
            android:layout_height="59dp"
            android:layout_below="@+id/boton_sumar1_visitante"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="43dp"
            android:layout_toEndOf="@+id/numero_local"
            android:backgroundTint="#3F3F3F"
            android:text="+2"
            android:textSize="16sp"
            android:visibility="visible"
            tools:context=".MainActivity" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="112dp"
            android:layout_below="@+id/numero_local"
            android:layout_marginTop="58dp"

            app:srcCompat="@drawable/pngwing"
            tools:context=".MainActivity"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/buttonPasarVentana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boton_sumar2_local"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@drawable/boton_cuadrado"

            android:backgroundTint="#3F3F3F"
            android:text=">"
            android:textColorLink="#000000"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boton_restar_local4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="27dp"
            android:layout_toStartOf="@+id/imageView2"
            android:background="@drawable/boton_cuadrado"
            android:backgroundTint="#3F3F3F"
            android:text="ðŸ”„"
            android:textColorLink="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            tools:context=".MainActivity"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>
</layout>